<script>

    $(document).ready(function(){

        $("#click_button").click(function(){

            // Creo una variabile:
            var parametri;

            // La popolo con tutti i dati del form
            parametri =  {
                "primoCampo" : $("#idNome").val(),
                "secondoCampo" : $("#idCognome").val(),
                
            };

            input = JSON.stringify(parametri);

            console.log(input);

            // Eseguo una chiamata AJAX verso l'endpoint che voglio testare
            $.ajax ({
                'url' : '/endPointAjax',
                'data': input,
                'type': 'POST',
                'processData': false,
                'contentType': 'application/json',
                success: function(data) {
                    console.log(data);

                },
                error: function(xhr, error){
                    console.debug(xhr);
                    console.debug(error);
                    alert("campi vuoti!");
                },
            });


        });


    });


</script>


