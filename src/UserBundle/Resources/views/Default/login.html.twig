    <h2>prova chiamata ajax</h2>
    <form action="javascript:void(0);"> 
        <input type="text" name="primoCampo" id="idNome" value="">
        <input type="text" name="secondoCampo" id="idCognome" value="">
        <button type="submit"  id="click_button"> Click</button>
    
